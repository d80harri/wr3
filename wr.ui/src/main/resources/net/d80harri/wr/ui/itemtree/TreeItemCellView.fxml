<fx:root fx:id="root" type="javafx.scene.layout.Pane" id="item"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<BorderPane prefWidth="${root.width}" >
		<center>
			<TextField fx:id="txtTitle" 
				promptText="Enter a title"
				style="-fx-fon-size:20px"
				styleClass="input-label">
				<font>
					<Font size="18.0" />
				</font>
			</TextField>
		</center>
		<left>
			<Button style="-fx-background-color:transparent">
				<graphic>
					<Glyph fontFamily="FontAwesome" icon="DOT_CIRCLE_ALT" fontSize="25"/>
				</graphic>
			</Button>
		</left>
		<bottom>
			<StackPane fx:id="detailPane" >
				<FittingHeightTextArea  fx:id="descriptionArea" 
					promptText="Enter a description"
					styleClass="input-label"/>
			</StackPane>
		</bottom>
	</BorderPane>
</fx:root>
